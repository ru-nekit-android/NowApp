<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp"  />
                    <solid android:color="#CCFFFFFF" />
                </shape>
            </item>

            <item android:drawable="@drawable/ic_action_minus" />

            <item android:bottom="-2dp" android:left="-2dp" android:right="-2dp" android:top="0px">
                <shape android:shape="rectangle">
                    <solid android:color="@null" />
                    <stroke android:width="1dp" android:color="#33333333" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>