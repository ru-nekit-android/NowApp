<resources>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light" />

    <style name="NowThemeBase" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="typeface">roboto_light</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="SplashScreenThemeBase" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/primary_color</item>
        <item name="typeface">roboto_light</item>
        <item name="android:alertDialogStyle">@style/Theme.AppCompat.Light.Dialog</item>
    </style>

    <style name="DialogThemeBase" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="NowTheme" parent="NowThemeBase" />

    <style name="SplashScreenTheme" parent="SplashScreenThemeBase" />

    <style name="DialogTheme" parent="DialogThemeBase" />

    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_close</item>
    </style>

    <style name="EventName">
        <item name="maxTextSize">32sp</item>
        <item name="minTextSize">8sp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:gravity">bottom</item>
        <item name="typeface">roboto_medium</item>
        <item name="android:lineSpacingMultiplier">@dimen/event_name_line_spacing_multiplier</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EventName.Detail">
        <item name="maxTextSize">64dp</item>
        <item name="minTextSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DayText">
        <item name="android:textSize">48sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MonthText">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DayOfWeekText">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EventStartTime">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">@dimen/event_start_time_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="typeface">roboto_light_italic</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TimeText">
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HourText">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EntranceBlock">
        <item name="android:gravity">center</item>
    </style>

    <style name="MinuteText">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EntranceTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Entrance">
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Place">
        <item name="maxTextSize">18sp</item>
        <item name="minTextSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Place_TextBlock">
        <item name="maxTextSize">20sp</item>
        <item name="minTextSize">8sp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Place_Name">
        <item name="typeface">roboto_regular</item>
    </style>

    <style name="Place_Address">
        <item name="typeface">roboto_light</item>
    </style>

    <style name="EventDescription">
        <item name="android:textSize">16sp</item>
        <item name="typeface">roboto_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionButton">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="typeface">roboto_regular</item>
        <item name="android:background">@drawable/action_button_background</item>
    </style>

    <style name="NowLogoOnSplashScreen">
        <item name="android:layout_marginRight">@dimen/large_space</item>
        <item name="android:layout_marginLeft">@dimen/large_space</item>
    </style>

    <style name="NowLogoInToolbar">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_marginLeft">64dp</item>
        <item name="android:layout_marginRight">64dp</item>
    </style>

    <style name="AboutText">
        <item name="typeface">roboto_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MapActionButton">
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">42dp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="typeface">roboto_light</item>
        <item name="android:paddingTop">@dimen/big_space</item>
        <item name="android:paddingLeft">@dimen/large_space</item>
        <item name="android:paddingRight">@dimen/large_space</item>
    </style>

    <style name="DialogContent">
        <item name="android:textColor">@android:color/black</item>
        <item name="typeface">roboto_light</item>
        <item name="android:paddingTop">@dimen/big_space</item>
        <item name="android:paddingLeft">@dimen/large_space</item>
        <item name="android:paddingRight">@dimen/large_space</item>
    </style>

    <style name="AddToCalendarText">
        <item name="typeface">roboto_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OfflineView">
        <item name="typeface">roboto_regular</item>
    </style>

    <style name="NothingFound">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="typeface">roboto_light</item>
    </style>

    <style name="ProgressWheel">
        <item name="matProg_barWidth">1dp</item>
    </style>

    <style name="StatsText">
        <item name="android:textSize">20sp</item>
        <item name="typeface">roboto_light</item>
        <item name="android:textColor">@color/event_stats_normal</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_compat_margin</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="AdvertText">
        <item name="typeface">roboto_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/advert_text</item>
    </style>

    <style name="LoadingDialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
