<resources>

    <style name="NowTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="EventNameTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EventNameTextStyle.DetailTitle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MonthStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DayOfWeekStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TimeStyle">
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="HourTextStyle">
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="DayTextStyle">
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="MinuteTextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="EventPlaceTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
