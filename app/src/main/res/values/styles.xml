<resources>

    <style name="NowTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/main</item>
        <item name="typeface">roboto_light</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/main</item>
        <item name="typeface">roboto_light</item>
    </style>

    <style name="EventNameText">
        <item name="maxTextSize">32sp</item>
        <item name="minTextSize">10sp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:gravity">bottom</item>
        <item name="typeface">roboto_medium</item>
        <item name="android:lineSpacingMultiplier">@dimen/event_name_line_spacing_multiplier</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EventNameText.DetailTitle">
        <item name="maxTextSize">42dp</item>
        <item name="minTextSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DayText">
        <item name="android:textSize">48sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MonthText">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DayOfWeekText">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EventStartTime">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">@dimen/event_start_time_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="typeface">roboto_light_italic</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="TimeText">
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HourText">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EntranceTextBlock">
        <item name="android:gravity">center</item>
    </style>

    <style name="MinuteText">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EntranceTitleText">
        <item name="android:textSize">23sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EntranceText">
        <item name="android:layout_marginTop">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PlaceText">
        <item name="maxTextSize">18sp</item>
        <item name="minTextSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PlaceText.Detail">
        <item name="maxTextSize">20sp</item>
        <item name="minTextSize">10sp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="EventDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/action_button_background</item>
    </style>

    <style name="AddressText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">#55000000</item>
        <item name="android:padding">8dp</item>
        <item name="typeface">roboto_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NowLogoOnSplashScreen">
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="NowLogoInToolbar">
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="AboutText">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
