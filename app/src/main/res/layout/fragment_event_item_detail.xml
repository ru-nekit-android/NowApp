<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="ru.nekit.android.nowapp.view.EventItemDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_thumb_view"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="224dp">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/title_view"
                    style="@style/EventNameTextStyle.DetailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:paddingBottom="16dp" />

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/divide_line" />

                <ImageView
                    android:id="@+id/logo_view"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    android:id="@+id/place_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">


            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/day_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/DayTextStyle"
                    android:background="#ff0000"
                    android:text="111"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/month_view"
                    android:layout_toStartOf="@+id/month_view"
                    android:layout_margin="0dp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/month_view"
                    style="@style/MonthStyle"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="222"
                    android:layout_above="@+id/day_of_week_view"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/day_of_week_view"
                    style="@style/DayOfWeekStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="333"
                    android:layout_alignBottom="@+id/day_date_view"
                    android:layout_alignLeft="@+id/month_view"
                    android:layout_alignStart="@+id/month_view"
                    android:layout_alignBaseline="@+id/day_date_view" />

            </RelativeLayout>

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divide_line" />

            <TextView
                android:id="@+id/time_view"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                style="@style/TimeStyle"
                android:layout_height="wrap_content" />

            <View
                android:layout_height="match_parent"
                android:layout_width="1dp"
                android:background="@color/divide_line" />

            <TextView
                android:id="@+id/entrance_view"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/category_type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/cat_book_big" />


</FrameLayout>
