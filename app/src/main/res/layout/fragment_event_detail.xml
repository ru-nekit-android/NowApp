<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.nekit.android.nowapp.view.EventDetailFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_space"
                android:layout_marginRight="@dimen/large_space"
                android:layout_marginTop="@dimen/large_space"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/normal_space"
                    android:layout_marginRight="@dimen/normal_space"
                    android:layout_weight="2">

                    <com.pnikosis.materialishprogress.ProgressWheel
                        android:id="@+id/progress_wheel"
                        android:layout_width="@dimen/progress_wheel_size"
                        android:layout_height="@dimen/progress_wheel_size"
                        android:layout_gravity="center"
                        app:matProg_barColor="@color/primary"
                        app:matProg_progressIndeterminate="true" />

                    <ImageView
                        android:id="@+id/poster_thumb_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_space"
                    android:layout_marginStart="@dimen/normal_space"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <ru.nekit.android.nowapp.widget.AutoResizeTextView
                        android:id="@+id/title_view"
                        style="@style/EventNameText.DetailTitle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/event_name_height"
                        android:layout_marginBottom="@dimen/big_space" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divide_line" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/small_space">

                        <ImageView
                            android:id="@+id/logo_view"
                            android:layout_width="@dimen/logo_max_width"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxHeight="@dimen/logo_max_height"
                            android:scaleType="fitStart" />

                        <ru.nekit.android.nowapp.widget.AutoResizeTextView
                            android:id="@+id/place_view"
                            style="@style/PlaceText.Detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/information_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_layout"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/large_space"
                android:layout_marginRight="@dimen/large_space"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/day_date_view"
                        style="@style/DayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toLeftOf="@+id/month_view"
                        android:layout_toStartOf="@+id/month_view" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/month_view"
                        style="@style/MonthText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/day_of_week_view"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/normal_space"
                        android:layout_marginRight="@dimen/normal_space" />

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/day_of_week_view"
                        style="@style/DayOfWeekText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/day_date_view"
                        android:layout_alignBottom="@+id/day_date_view"
                        android:layout_alignLeft="@+id/month_view"
                        android:layout_alignStart="@+id/month_view"
                        android:layout_marginEnd="@dimen/normal_space"
                        android:layout_marginRight="@dimen/normal_space" />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/normal_space"
                    android:layout_marginTop="@dimen/normal_space"
                    android:background="@color/divide_line" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/time_view"
                    style="@style/TimeText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/normal_space"
                    android:layout_marginTop="@dimen/normal_space"
                    android:background="@color/divide_line" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/entrance_view"
                    style="@style/EntranceTextBlock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5" />

            </LinearLayout>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/description_view"
                style="@style/EventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/information_layout"
                android:layout_marginLeft="@dimen/large_space"
                android:layout_marginRight="@dimen/large_space" />

            <com.devspark.robototextview.widget.RobotoButton
                android:id="@+id/phone_button"
                style="@style/ActionButton"
                android:layout_width="match_parent"
                android:layout_below="@+id/description_view"
                android:layout_marginBottom="-1dp" />

            <com.devspark.robototextview.widget.RobotoButton
                android:id="@+id/site_button"
                style="@style/ActionButton"
                android:layout_width="match_parent"
                android:layout_below="@+id/phone_button"
                android:layout_marginTop="-1dp"
                android:paddingLeft="@dimen/large_space"
                android:paddingRight="@dimen/large_space" />

            <RelativeLayout
                android:id="@+id/map_view_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/site_button">

                <org.osmdroid.views.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.devspark.robototextview.widget.RobotoButton
                    android:id="@+id/address_view"
                    style="@style/AddressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/large_space"
                    android:paddingRight="@dimen/large_space" />

                <View
                    android:id="@+id/map_scroll_fake_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/large_space"
                    android:layout_marginRight="@dimen/large_space"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/event_location"
                    style="@style/MapActionButton"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/address_view"
                    android:layout_marginEnd="@dimen/normal_space"
                    android:layout_marginRight="@dimen/normal_space"
                    android:layout_marginTop="@dimen/normal_space"
                    android:background="@drawable/ic_event_location" />

                <Button
                    android:id="@+id/my_location"
                    style="@style/MapActionButton"
                    android:layout_alignEnd="@+id/event_location"
                    android:layout_alignRight="@+id/event_location"
                    android:layout_below="@+id/event_location"
                    android:background="@drawable/ic_my_location" />

                <Button
                    android:id="@+id/zoom_plus"
                    style="@style/MapActionButton"
                    android:layout_above="@+id/zoom_minus"
                    android:layout_alignEnd="@+id/event_location"
                    android:layout_alignRight="@+id/event_location"
                    android:background="@drawable/ic_zoom_plus" />

                <Button
                    android:id="@+id/zoom_minus"
                    style="@style/MapActionButton"
                    android:layout_alignEnd="@+id/event_location"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/event_location"
                    android:layout_marginBottom="@dimen/normal_space"
                    android:background="@drawable/ic_zoom_minus" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/category_type_view"
                android:layout_width="@dimen/event_category_big_view_size"
                android:layout_height="@dimen/event_category_big_view_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/category_education_big" />


        </RelativeLayout>

    </ScrollView>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        app:fab_addButtonSize="normal"
        android:layout_marginRight="@dimen/normal_space"
        app:fab_colorNormal="@color/primary"
        app:fab_colorPressed="@color/primary_transparent"
        app:fab_icon="@drawable/ic_action_calendar"
        app:fab_plusIconColor="@android:color/white" />

</FrameLayout>






