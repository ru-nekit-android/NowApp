<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="160dp"
    tools:context="ru.nekit.android.nowapp.modelView.EventCollectionItemViewHolder">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/event_collection_item_catalog_type_shift"
        android:layout_marginStart="@dimen/event_collection_item_catalog_type_shift"
        android:layout_marginTop="@dimen/event_collection_item_catalog_type_shift"
        android:background="@drawable/event_item_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/event_collection_item_shadow_size"
        android:layout_marginEnd="@dimen/event_collection_item_shadow_size">

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/event_item_background_color"
            android:layout_marginBottom="@dimen/event_collection_item_shadow_size"
            android:layout_alignParentBottom="true"
            android:baselineAligned="true"
            android:layout_marginLeft="@dimen/event_collection_item_catalog_type_shift"
            android:layout_marginStart="@dimen/event_collection_item_catalog_type_shift"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_marker"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/place_view"
                style="@style/EventPlaceTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/poster_thumb_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/event_item_poster_thumb_background_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/bottom_layout"
            android:layout_marginTop="@dimen/event_collection_item_catalog_type_shift"
            android:layout_marginLeft="@dimen/event_collection_item_catalog_type_shift"
            android:layout_marginStart="@dimen/event_collection_item_catalog_type_shift"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_catalog_view" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/name_view"
            style="@style/EventNameTextStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/icon_catalog_view"
            android:layout_toEndOf="@+id/icon_catalog_view"
            android:layout_above="@+id/bottom_layout" />

    </RelativeLayout>


</FrameLayout>