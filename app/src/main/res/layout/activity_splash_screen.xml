<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.nekit.android.nowapp.view.SplashScreenFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_gravity="bottom|center_horizontal"
            style="@style/NowLogoOnSplashScreen"
            android:src="@drawable/now_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/progress_wheel_size">

        <com.pnikosis.materialishprogress.ProgressWheel
            wheel:matProg_barWidth="1dp"
            android:id="@+id/progress_wheel"
            android:layout_gravity="center"
            android:layout_width="@dimen/progress_wheel_size"
            android:layout_height="@dimen/progress_wheel_size"
            wheel:matProg_barColor="@android:color/white"
            wheel:matProg_progressIndeterminate="true" />
    </FrameLayout>

</LinearLayout>