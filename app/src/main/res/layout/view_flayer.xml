<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        style="@style/ProgressWheel"
        android:layout_width="@dimen/progress_wheel_size"
        android:layout_height="@dimen/progress_wheel_size"
        android:layout_below="@id/image_view"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="@android:color/white"
        wheel:matProg_progressIndeterminate="true" />

    <ImageView
        android:background="@android:color/white"
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/image_view"
        android:layout_marginTop="@dimen/big_space"
        android:src="@drawable/ic_highlight_off_white_48dp"
        android:visibility="gone" />

</RelativeLayout>